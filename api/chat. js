export default async function handler(req, res) {
  // CORS pour Shopify
  if (req.method === 'OPTIONS') {
    res.setHeader('Access-Control-Allow-Origin', '*');
    res.setHeader('Access-Control-Allow-Methods', 'GET,POST,OPTIONS');
    res.setHeader('Access-Control-Allow-Headers', 'Content-Type');
    return res.status(204).end();
  }
  res.setHeader('Access-Control-Allow-Origin', '*');

  // GET simple pour test rapide dans le navigateur
  if (req.method === 'GET') {
    return res.status(200).json({
      status: 'ready',
      service: 'op01-backend',
      endpoint: '/api/chat',
      ts: new Date().toISOString()
    });
  }

  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Use POST' });
  }

  try {
    const { text = '', ctx = [] } = req.body || {};
    const reply = text ? `Re√ßu: ${text}` : 'Dites-moi comment je peux vous aider.';
    const messages = [...ctx, { role: 'user', content: text }, { role: 'assistant', content: reply }];
    return res.status(200).json({ reply, context: { messages } });
  } catch (e) {
    return res.status(500).json({ error: 'Server error' });
  }
}
